# Kalshi API Credentials
# Copy this file to .env and fill in your credentials

# ===== KALSHI API AUTHENTICATION =====
# Method 1: API Key Authentication (RECOMMENDED)
# Get your API key from: https://kalshi.com/profile/api-keys
# When you create an API key, download the private key .pem file
KALSHI_API_KEY_ID=your_api_key_id_here
KALSHI_PRIVATE_KEY_PATH=/path/to/your/private_key.pem

# Method 2: Email/Password (LEGACY - will be deprecated)
# Only use if you don't have an API key yet
# KALSHI_EMAIL=your_email@example.com
# KALSHI_PASSWORD=your_password

# Kalshi Environment
# Production: https://api.elections.kalshi.com
# Demo: https://demo-api.kalshi.co
KALSHI_BASE_URL=https://api.elections.kalshi.com

# ===== OTHER API KEYS =====
# Gemini API for LLM Agents (Optional)
GEMINI_API_KEY=your_gemini_api_key

# Sportradar API (Optional)
SPORTRADAR_API_KEY=your_sportradar_key

# ===== MONITORING (Optional) =====
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
ALERT_EMAIL=your_email@example.com

# ===== EMAIL NOTIFICATIONS (Optional) =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# ===== LOGGING =====
LOG_LEVEL=INFO
JSON_LOGS=false
