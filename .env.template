# Kalshi API Credentials
# Copy this file to .env and fill in your credentials

# Demo Environment (Recommended for testing)
KALSHI_EMAIL=your_email@example.com
KALSHI_PASSWORD=your_password
KALSHI_BASE_URL=https://demo-api.kalshi.co

# Production Environment (Uncomment to use real money)
# KALSHI_EMAIL=your_email@example.com
# KALSHI_PASSWORD=your_password
# KALSHI_BASE_URL=https://trading-api.kalshi.com

# Optional: API Key (if Kalshi provides one)
# KALSHI_API_KEY=your_api_key_here

# Monitoring (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
ALERT_EMAIL=your_email@example.com

# Email Notifications (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Gemini API for LLM Agents (Optional)
GEMINI_API_KEY=your_gemini_api_key

# Logging
LOG_LEVEL=INFO
JSON_LOGS=false
